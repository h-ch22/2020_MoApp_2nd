<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical">

    <TextView
        android:id = "@+id/timeCapsule_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:fontFamily="@font/sdgothicneo_bold"
        android:gravity="center"
        android:textSize = "40sp"
        android:text = "타임캡슐 이름"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id = "@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "vertical">



        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/startAR"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rounded_shape"
        android:fontFamily="@font/sdgothicneo_m"
        android:paddingStart = "20dp"
        android:paddingEnd = "20dp"
        android:drawableStart="@drawable/ic_ar"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:text="  AR로 보기   "
        android:textColor="#ffffff"
        android:textSize="25sp" />


</LinearLayout>